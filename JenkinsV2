pipeline {
    agent any
    
    stages {
        stage('Build and Test') {
            steps {
                // Checkout code from main branch
                git branch: 'main', url: 'https://github.com/SyedHussain6/ProjectDeliverable2SQ.git'
                
                // Navigate to webapp folder
                dir('Webapp') {
                    // Build and test commands
                    sh 'npm install' // Example for Node.js project
                    sh 'npm test'
                }
            }
        }
        
        stage('Deployment') {
            steps {
                // Deployment commands
                sh 'echo "Deploying webapp..."'
                // Add deployment commands here
            }
        }
    }
    
    post {
        always {
            // Post-build actions
            echo 'Pipeline finished.'
        }
    }
}
